<li class="graybox" id="comment-<%= comment.id %>" <%= 'style="display:none"' if controller.request.xhr? %><%= onhover_show_admin_tools(:comment, comment.id) %>>
  
  <a name="comment-<%= comment.id %>"></a>
  <div class="author">
  <%=  image_tag("http://www.gravatar.com/avatar.php?gravatar_id=" + Digest::MD5.hexdigest(comment.email) + "&size=32", options = {:alt => comment.author }) %>
  <cite><%= (comment.url.blank?) ? h(comment.author) : link_to(h(comment.author), comment.url) %></cite> said <%= distance_of_time_in_words @article.created_at, comment.created_at %> later:
  </div>
  <%= comment.body_html %>
</li>
