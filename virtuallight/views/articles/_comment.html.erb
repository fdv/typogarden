<li class="commentEntry comment" id="comment-<%= comment.id %>" <%= 'style="display:none"' if controller.request.xhr? %><%= onhover_show_admin_tools(:comment, comment.id) %>>
  
  <a name="comment-<%= comment.id %>"></a>
  <cite class="commentFrom"><strong><%= (comment.url.blank?) ? h(comment.author) : link_to(h(comment.author), comment.url) %></strong> </cite> said <%= distance_of_time_in_words @article.created_at, comment.created_at %> later:<br />
  <div class="commentBody">
	  <%= comment.body_html %>
  </div>
</li>
