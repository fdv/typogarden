<% form_remote_tag :url      => @article.comment_url,
                    :position => :bottom,
                    :update   => {:success => 'commentList'},
                    :loading  => "loading()",
                    :complete => "complete(request)",
                    :failure  => "failure(request)",
                    :html     => {:id => 'commentform', :class => 'comments' } \
    do %>


<div class="comment-box">
  <div id="errors"></div>

  <a name="respond"></a>

  <h4 class="blueblk">Leave a comment</h4>

  <table cellpadding="2" cellspacing="0" class="comment">
    <tr>
      <td class="meta"><p><label for="comment_author">Name</label></p>
<%= text_field "comment", "author", :size => 20 %></td>
    </tr>
    <tr id="guest_url">
      <td class="meta"><p><label for="comment_url">Site</label></p>
        <%= text_field "comment", "url" %></td>
    </tr>
    <tr id="guest_email">
      <td class="meta"><p><label for="comment_email">E-mail</label></p>
      <%= text_field "comment", "email" %></td>
    </tr>
    <tr>
      <td class="meta"><p><label for="comment_body">Comment</label></p>
      <%= text_area "comment", "body" %></td>
    </tr>
    <tr>
      <td colspan="2" id="comments-buttons">
      <span id="comment_loading" style="display:none;"><%= image_tag "spinner.gif" %></span>&nbsp;&nbsp;
        <input type="submit" name="submit" id="form-submit-button" value="Save comment" class="button" />
      </td>
    </tr>
  </table>
</div>
<% end %>
