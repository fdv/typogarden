<% form_tag({ :controller => 'articles', :action => 'search' },
            { :method => 'get', :id => 'sform' }) do -%><p><label for="q" id="qlabel">Search this site</label><input type="text" id="q" name="q" /></p>
<% end %><img id="search_spinner" style="display:none;" src="/images/theme/ispinner.gif" alt=""/><div id="search-results" style="visibility:hidden;"></div>
<%= observe_field "q", :frequency => 1, 
    :url => { :controller => "live", :action => "search" }, 
    :loading => "Element.show('search_spinner')",
    :complete => " showSearch(); Element.hide('search_spinner');",
    :update => "search-results",
    :with => "'q=' + escape($F('q'))" -%>
