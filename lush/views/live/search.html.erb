<% if !@search.to_s.blank? -%>
<a title="close search box" class="searchclose" href='javascript:hideSearch();'>&nbsp;</a>
  <p id="searchedfor">Searched for <em>"<%=h @search %>"</em></p>
  <ul>
  <% for article in @articles.to_a -%>
    <li><%= link_to_permalink article, article.title %></li>
  <% end -%>
	</ul>
<a title="close search box" class="searchclose" href='javascript:hideSearch();'>&nbsp;</a>
<% else %>
  &nbsp;
<% end -%>
