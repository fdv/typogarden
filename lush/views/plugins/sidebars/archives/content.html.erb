<% unless @archives.blank? %>
<h3>Archives</h3>
<ul id="archives">
  <li><%= link_to 'Master Archive', :controller => "articles", :action => "archives" %></li>
  <% @archives.each do |month| %>
    <li>
      <% linktitle = month[:name] %>
      <% linktitle = linktitle + " (#{month[:count]})" if @sb_config['show_count'] %>
      <%= link_to linktitle, :controller => "articles", :action => "find_by_date", :year => month[:year], :month => month[:month] %>
    </li>
  <% end %>
</ul>
<% end %>
