<% for article in @articles -%>
 <div class="post">
  <%= render :partial => "article", :object => article %>
  <%= link_to_permalink(article, "#{_("Read more")}...") if article.extended? %>  
  <p class="meta"><div id="posticon"></div><%= article_links article %></p> 
  </div>
<% end -%>

<p class="pagination"><%= will_paginate @articles %></p>

