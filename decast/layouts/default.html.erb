<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title><%=h page_title %></title>
  <%= page_header %>
  <%= stylesheet_link_tag "/stylesheets/theme/azure", :media => 'all'  %>
  <%= stylesheet_link_tag "/stylesheets/theme/local", :media => 'all'  %>
  <%= javascript_include_tag "/javascript/theme/top-bar" %>
</head>
<body onload="replacetopbar();">
<div id="top-bar" onmouseover="topbarmouseover();" onmouseout="topbarmouseout();">
	<div id="top-bar-text">&nbsp;&nbsp;<span class="top-bar-text-2">Hover to Expand &raquo;</span>&nbsp; Live Search&nbsp;&nbsp;&nbsp;&nbsp;</div>
	<div id="sidebar" style="display: none;">
		<div id="search"><%= render :partial => "shared/search" %></div>
		<div id="search-results"></div>
		<%= render_sidebars %>
	</div>
</div>

<div id="container">
	<div id="header-padding"></div>
	<div id="header">
		<div id="logo">
			<h1 id="sitename"><%= link_to this_blog.blog_name, { :controller => '/' } %></h1>
			<h2 id="subtitle"><%= this_blog.blog_subtitle %></h2>
		</div>
	</div>      
	
	<div id="content">
		<div id="main">
		<%= @content_for_layout %>
		<%= javascript_tag "show_dates_as_local_time()" %>
		</div>
		<div id="footer">
			<ul>
				<li><a href="http://validator.w3.org/check?uri=referer">Valid XHTML 1.0</a></li>
				<li><a href="http://jigsaw.w3.org/css-validator/validator?uri=<%= url_for :controller => 'articles' %>">Valid CSS</a></li>
				<li><a href="http://typo.leetsoft.com">Powered by Typo</a></li>
			</ul>
		</div>
	</div>
</div>
</body>
</html>
