<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title><%=h page_title %></title>
  
  <%= page_header %>
  <%= stylesheet_link_tag "/stylesheets/theme/abstractflight", :media => 'all'  %>
  <%= stylesheet_link_tag "/stylesheets/theme/local", :media => 'all'  %>
  <%= javascript_include_tag "/javascript/theme/ach" %>
</head>

<body>
	<div id="container" class="clearfix">
	
		<div id="header">
			<div id="title"><h1 id="sitename"><%= link_to this_blog.blog_name, { :controller => '/' } %></h1></div>
			<div id="subtitle"><h2 id="subtitle"><%= this_blog.blog_subtitle %>&nbsp;&nbsp;</h2></div>
		</div>  <!-- end header -->
	
		<div id="content" class="clearfix">
		
			<div id="main">
				<%= @content_for_layout %>
				<%= javascript_tag "show_dates_as_local_time()" %>
			</div>  <!-- end main -->
		
			<div id="sidebar">
			
				<div id="search"><%= render :partial => "shared/search" %></div>
			
				<div id="search-results"></div>

				<%= render_sidebars %>
			
			</div>  <!-- end sidebar -->
		
		</div>  <!-- end content -->
	
		<div id="footer">
			<ul>
				<li><a href="http://validator.w3.org/check?uri=referer">XHTML</a> | </li>
				<li><a href="http://jigsaw.w3.org/css-validator/validator?uri=<%= url_for :controller => 'articles' %>">CSS</a> | </li>
				<li><a href="http://typosphere.org">TYPO</a> | </li>
				<li><%= this_blog.blog_name %> | </li>
				<li><%= this_blog.blog_subtitle %></li>
			</ul>
		</div>  <!-- end footer -->
	
	</div>  <!-- end container -->
  
</body>
</html>
