<li class="comment <%= (@css == 0) ? 'alt' : ''  %>" id="comment-<%= comment.id %>">
  <cite>
    <%= gravatar_tag(comment.email) if this_blog.use_gravatar and comment.email %>
    <%= (comment.url.blank?) ? h(comment.author) : link_to(h(comment.author), comment.url) %>
  </cite>
  Says <br />
  <small class="commentmetadata">
    <span title="<%= comment.created_at.xmlschema %>"><%= distance_of_time_in_words comment.article.published_at, comment.created_at %> later:</span>
  </small>
    
  <%= comment.html %>
  <% unless comment.published -%>
  <div class="spamwarning"><%= _("This comment has been flagged for moderator approval.") %></div>
  <% end -%>
</li>

<% @css = (@css == 0) ? 1 : 0 %>