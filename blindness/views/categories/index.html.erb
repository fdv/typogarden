<% for article in @articles -%>
 <div class="post">
  <%= render :partial => "article", :object => article %>
  <%= link_to_permalink(article, "#{_("Read more")}...") if article.extended? %>  
  <p class="meta"><%= article_links article %></p> 
  </div>
  <div class="hr"><hr /></div>
<% end -%>

<p id="pagination"><%= will_paginate @articles %></p>
