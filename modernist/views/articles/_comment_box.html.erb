<div class="comment-box">
<div class="flip">
<a href="#header" onclick="new Effect.ScrollTo('header'); return false" class="flip-top" title="Scroll to the top"> </a>
<a href="#menu" onclick="new Effect.ScrollTo('menu'); return false" class="flip-menu" title="Scroll to the menu"> </a>
</div>
<h3 class="green">Post a comment!</h3>

<% form_remote_tag :url      => @article.comment_url,
                    :position => :bottom,
                    :update   => {:success => 'commentList'},
                    :loading  => "loading()",
                    :complete => "complete(request)",
                    :failure  => "failure(request)",
                    :html     => {:id => 'commentform', :class => 'comments' } \
    do %>



  <div id="errors"></div>

  <a name="respond"></a>  
  <table cellpadding="4" cellspacing="0" class="frm-tbl">
    <tr>
      <td><p><label for="comment_author">name <span class="errors">*</span></label></p></td>
      <td> <%= text_field "comment", "author", :size => 20 %></td>
    </tr>
    <tr id="guest_url">
      <td><p><label for="comment_url">site</label></p></td>
      <td> <%= text_field "comment", "url" %></td>
    </tr>
    <tr id="guest_email">
      <td><p><label for="comment_email">email</label></p></td>
      <td> <%= text_field "comment", "email" %></td>
    </tr>
    <tr>
      <td><p><label for="comment_body">message <span class="errors">*</span></label></p></td>
      <td valign="top" colspan="2">
        <%= text_area "comment", "body" %>
      </td>
    </tr>
    <tr>
      <td><span id="comment_loading" style="display:none;"> &nbsp; <%= image_tag "spinner.gif" %></span></td>
      <td>
        <input type="submit" name="submit" id="form-submit-button" value="submit" class="button" />
      </td>
    </tr>
  </table>
<% end %>
</div>
