<li class="graybox" id="comment-<%= comment.id %>" <%= 'style="display:none"' if controller.request.xhr? %><%= onhover_show_admin_tools(:comment, comment.id) %>>
  
  <p class="cite">
      <a name="comment-<%= comment.id %>"><%= comment.id %></a> 
      by <%= (comment.url.blank?) ? h(comment.author) : link_to(h(comment.author), comment.url) %> 
      <%= distance_of_time_in_words @article.created_at, comment.created_at %> later
  </p>
  <%= comment.body_html %>
</li>
