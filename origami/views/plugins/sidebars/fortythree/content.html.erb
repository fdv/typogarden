<% if @fortythree -%>
<h3 id="forty-three-heading"><%= link_to "43 Things", @fortythree.link %></h3>
<ul id="forty-three-list">
<% for thing in @fortythree.things.to_a.slice(0,@sb_config['count'].to_i) -%>
  <li><a href="<%= thing.link %>" title="<%= thing.title %>"><%= thing.title %> </a></li>
<% end -%>
</ul>
<% end -%>
